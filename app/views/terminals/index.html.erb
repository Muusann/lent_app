<p id="notice"><%= notice %></p>

<h1>端末情報</h1>

<table>
  <thead>
    <tr>
      <th>端末名</th>
      <th>管理番号</th>
      <th>OS情報</th>
      <th>備考</th>
      <th>管理場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each do |terminal| %>
      <tr>
        <td><%= terminal.name %></td>
        <td><%= terminal.num %></td>
        <td><%= terminal.os %></td>
        <td><%= terminal.remark %></td>
        <td><%= terminal.place_id %></td>
        <td><%= link_to 'Show', terminal %></td>
        <td><%= link_to 'Edit', edit_terminal_path(terminal) %></td>
        <td><%= link_to 'Destroy', terminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
